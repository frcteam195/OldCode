#pragma config(Motor,  port2,           leftDrive,     tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port3,           rightDrive,    tmotorVex393_MC29, openLoop, reversed)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

/*
This code uses the "lock" variable to determine if the drive should speed up linearly or exponentially 
This function can have many implications in code, even setting up multiple drive systems for different situations
*/
task main()			
{
	int lock;		//the lock variable is used to keep the input on or off after the button is pressed. 0 would be the 
	lock = 0;		//"off" position, while 1 is the "on" position
	
	if(vexRT[Btn5D] == 1)		//code checks for button to be pressed
	{
		if(lock == 0)		//from there, it determines the current state of lock
		{
			lock = 1;			//if it is off, then it turns 'on'.
		}
		else						//if it IS on,
		{
			lock = 0;			//then it turns off
		}
	}
	while (lock == 1) //this while loop activates "exponential drive" while lock is "on"
	{
		motor[leftDrive] = vexRT[Ch2] ^ 2 / 127;
		motor[rightDrive] = vexRT[Ch4] ^ 2 / 127;
	}
	motor[leftDrive] = vexRT[Ch2];		//this is the linear drive, so the speed of the motors directly
	motor[rightDrive] = vexRT[Ch4];		//mimics the input of the controller
}

